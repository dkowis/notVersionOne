<%= form_tag login_path, :class => "form-horizontal" do %>
    <div class="control-group">
      <label class="control-label" for="username">Username</label>

      <div class="controls">
        <input type="text" id="username" name="username" placeholder="VersionOne username..."/>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="password">Password</label>

      <div class="controls">
        <input type="password" id="password" name="password" placeholder="VersionOne password..."/>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn">Sign In</button>
      </div>
    </div>
<% end %>